<div class="row">
    <div class="col-md-8">
        <h2>Daftar Kontak</h2>

        <a href="/contacts/add" class="btn btn-primary mb-2">Tambah kontak</a>

        <% if (msg.length) { %>
            <div class="alert alert-success" role="alert">
                <%= msg %>
            </div>
        <% } %>

        <% if (!contacts.length) { %>
            <div class="alert alert-danger fw-bold fs-5" role="alert">
                Kamu tidak memiliki kontak apa pun!
            </div>
        <% } else { %>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nama</th>
                        <th scope="col">No HP</th>
                        <th scope="col">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% contacts.forEach((contact, i) => { %>
                        <tr>
                            <th scope="row"><%= i + 1 %></th>
                            <td><%= contact.nama %></td>
                            <td><%= contact.noHp %></td>
                            <td>
                                <a href="/contacts/<%= contact.nama %>"
                                    class="btn btn-success badge rounded-pill">
                                    <i class="bi bi-info-circle"></i>
                                    Detail</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </div>
</div>